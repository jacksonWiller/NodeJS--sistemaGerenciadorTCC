<h2>Lista de universidades:</h2>
<hr>
<a href="/admin/categorias/add"><button type="button" class="btn btn-success btn-md">Criar nova categoria</button></a>

{{#each universidades}}
  <div class="card mt-4">
    <div class="card-body">
      <h4>{{nome}}</h4>
      <small>Descrição: {{slug}}</small><br>
      <a href="/admin/categorias/edit/{{_id}}"><button type="button" class="btn btn-warning mt-3">Editar Categoria</button></a>
      <form action="/admin/categorias/deletar" method="post">
        <input type="hidden" name="id" value="{{_id}}">
        <button type="submit" class="btn btn-danger mt-2">Deletar Categoria</button>
      </form>
    </div>
  </div>
{{else}}
  <h4 class="mt-3">Nenhuma universidade registrada.</h4>
{{/each}}
